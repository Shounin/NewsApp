@model IEnumerable<NewsApp.Models.News>

@{
    ViewBag.Title = "Index";
}

<h2>Latest News</h2>


    @foreach (var item in Model.Reverse())
{
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <h4>@Html.ActionLink(item.Title, "Edit", new { id = item.ID })</h4>
                <p>@Html.DisplayFor(modelItem => item.Text)</p>
                <div class="row">
                    <div class="col-md-1">
                        <button type="button" class="btn btn-default btn-sm">@Html.ActionLink("Details", "Details", new { id = item.ID })</button>
                    </div>
                    <div class="col-md-1">
                        <button type="button" class="btn btn-default btn-sm">@Html.ActionLink("Delete", "Delete", new { id = item.ID })</button>
                    </div>
                    <div class="col-md-5"></div>
                    <div class="col-md-2">
                        <p class="text-right">@Html.DisplayFor(modelItem => item.PostDate)</p>
                    </div>
                    <div class="col-md-2">
                        <p class="text-right">@Html.DisplayFor(modelItem => item.Category)</p>
                    </div>
                </div>
            </div>
         </div>
    </div>
}

